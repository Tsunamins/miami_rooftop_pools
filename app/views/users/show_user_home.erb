<div class="sign">
    <ul class="userhome">
        <li><%= Helpers.current_user(session).username %>'s pools</li>
        <li><a href="/pools/new_pool" class="buttons">Add A Pool</a></li>
    </ul>    
    
</div>
<div class="poollisting">

<% @user.pools.each do |pool| %>    
    <h3><a href="pools/<%= pool.id %>"> <%= pool.pool_name %> : <%= pool.pool_desc %></a></h3>    
    <% end %>
</div>

 



<hr>
<h3><a href="/view_all" class="buttons">View All Pools </a> </h3>
<div class="poollisting">

    <h2>Featured Pools</h2>
    
      <% @pools.each do |pool| %>
    <h3> <a href="pools/<%= pool.id %>"> <%= pool.pool_name %> : <%= pool.pool_desc %></a></h3>
<% end %>
</div>


<div id="logout">
    <form method=post action='/logout'>
        <input type='submit' value="Logout" class="buttons">
    </form>
</div>
